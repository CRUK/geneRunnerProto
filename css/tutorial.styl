#paper-stripe {
  &:before {
    border: 1px solid $gray;
    border-width: 1px 0;
    content: " ";
    height: 2px;
    left: 0;
    position: absolute
    top: 10px;
    width: 100%;
  }
}

#standard-button {
  background: $green-dark;
  border: 1px solid $black;
  border-color: rgba($black, 0.5);
  border-radius: 2px;
  box-shadow: 0px 1px 0px rgba($white, 0.125) inset, 0 1px 3px rgba($black, 0.75);
  box-sizing: border-box;
  color: $gray;
  display: inline-block;
  font: inherit;
  padding: 3px 8px 3px 8px;
  position: relative;
  text-align: center;
  text-decoration: none;
  text-shadow: 0 1px 1px $black;
  vertical-align: middle;

  &:hover {
    border-color: $black;
  }

  &:active {
    box-shadow: 0 1px 0 rgba($black, 0.25) inset;
    opacity: 0.75;
  }

  &:disabled,
  &.disabled {
    opacity: 0.5;
  }
}

outer-deboss($distance) {
  &:before {
    background: rgba($black, 0.25);
    border-radius: $distance;
    box-shadow: 0 1px 2px rgba($black, 0.5) inset, 0 -1px 0px rgba($white, 0.25) inset;
    content: "";
    height: 100%;
    left: 0 - $distance;
    padding: $distance $distance ($distance + 1);
    position: absolute;
    top: 0 - $distance;
    width: 100%;
    z-index: -1;
  }
}

#standard-toggle {
  color: transparent;
  height: 20px;
  position: relative;
  text-shadow: none;
  width: 20px;

  &:before {
    background: rgba($black, 0.5);
    border-radius: 50%;
    box-shadow: 0 1px 0 rgba($black, 0.5) inset, 0 1px 0 rgba($white, 0.5);
    content: ' ';
    height: 10px;
    left: 50%;
    margin: -5px 0 0 -5px;
    overflow: hidden;
    position: absolute;
    top: 50%;
    width: 10px;
  }

  &.active:after {
    background: rgba($white, 0.5);
    border-radius: 50%;
    box-shadow: 0 1px 0 $white inset;
    content: ' ';
    height: 6px;
    left: 50%;
    margin: -3px 0 0 -3px;
    overflow: hidden;
    position: absolute;
    top: 50%;
    width: 6px;
  }
}


.tutorial.zootorial-dialog {
  background: $white;
  border-radius: 5px;
  box-shadow: 0 0 0 5px rgba($black, 0.5);
  color: $black;
  font-size: 12px;
  max-width: 300px;
  padding: 0 20px;
  position: absolute;
  transition: left 0.25s ease-out, top 0.25s ease-out 0.125s;

  button[name="close"] {
    font-size: 18px;
    height: 1em;
    line-height: 1em;
    position: absolute;
    right: 0;
    text-align: center;
    top: 0;
    width: 1em;
  }

  > .header {
    font-size: 18px;
    font-weight: bold;
  }

  > .footer {
    margin: 1em;
    text-align: center;
    display: block
    button {
       background: $green-dark;
      border: 1px solid $black;
      border-color: rgba($black, 0.5);
      border-radius: 2px;
      box-shadow: 0px 1px 0px rgba($white, 0.125) inset, 0 1px 3px rgba($black, 0.75);
      box-sizing: border-box;
      color: $gray;
      display: inline-block;
      font: inherit;
      padding: 3px 8px 3px 8px;
      position: relative;
      text-align: center;
      text-decoration: none;
      text-shadow: 0 1px 1px $black;
      vertical-align: middle;

      background-color: #490
    }
  }

  &.arrow {
    $arrow-size = 10px;

    &:before,
    &:after {
      border: $arrow-size solid transparent;
      content: "";
      position: absolute;
    }

    &:before {
      border-width: $arrow-size + 2
    }

    &.up {
      &:before,
      &:after {
        bottom: 100%;
        border-bottom-color: $white;
        left: 50%;
        margin-left: $arrow-size * -1;
      }

      &:before {
        border-bottom-color: rgba($black, 0.5);
        margin-left: ($arrow-size * -1) - 2;
      }
    }

    &.right {
      &:before,
      &:after {
        border-left-color: $white
        left: 100%;
        margin-top: $arrow-size * -1;
        top: 50%
      }

      &:before {
        border-left-color: rgba($black, 0.5);
        margin-top: ($arrow-size * -1) - 2;
      }
    }

    &.down {
      &:before,
      &:after {
        border-top-color: $white;
        left: 50%;
        margin-left: $arrow-size * -1;
        top: 100%;
      }

      &:before {
        border-top-color: rgba($black, 0.5);
        margin-left: ($arrow-size * -1) - 2;
      }
    }

    &.left {
      &:before,
      &:after {
        border-right-color: $white;
        margin-top: $arrow-size * -1;
        right: 100%;
        top: 50%;
      }

      &:before {
        border-right-color: rgba($black, 0.5);
        margin-top: ($arrow-size * -1) - 2;
      }
    }
  }
}

.zootorial-focuser {
  background: $black;
  opacity: 0.75;
  transition: opacity 0.25s ease-in-out;

  &.hidden {
    opacity: 0;
  }
}